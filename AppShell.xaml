<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RaceTrackSim.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RaceTrackSim"
    Shell.FlyoutBehavior="Disabled">
    
    <!-- A Tab Bar to switch between the MainPage and SimulationOptionPage-->
    <TabBar>
        <Tab Title="Race Simulation">
            <ShellContent
                Title="Hamster Race"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Option Simulation">
            <ShellContent
                Title="Option Menu"
                ContentTemplate="{DataTemplate local:SimulationOptionPage}"
                Route="SimulationOptionPage"
                />
        </Tab>
        <Tab Title="Analytics Menu">
            <ShellContent
                Title="Analytics Menu"
                ContentTemplate="{DataTemplate local:SimulationAnalyzePage}"
                Route="SimulationAnalyzePage"
            />
        </Tab>
    </TabBar>

</Shell>
